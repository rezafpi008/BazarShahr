<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        tools:context=".mainFragments.HomeFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/_10sdp"
            app:srcCompat="@drawable/my_store" />

        <LinearLayout
            android:paddingTop="@dimen/_40sdp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_stroke_primary_dark"
                android:gravity="center"
                android:text="@string/submit_store"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/bg_round_primary"
                android:gravity="center"
                android:text="@string/submit_product"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>



    </LinearLayout>
</layout>
